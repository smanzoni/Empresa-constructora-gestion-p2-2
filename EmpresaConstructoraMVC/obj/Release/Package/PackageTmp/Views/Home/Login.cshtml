@model Dominio.Vendedor

@{
    ViewBag.Title = "Login";
}

<form method="post">
    <div class="form-horizontal">
        <h4>Ingreso de Usuario</h4>

        <div class="form-group">
            <label for="NombreUsuario" class="control-label col-md-2">Nombre: </label>
            <div class="col-md-10">
                <input type="text" id="NombreUsuario" name="nombre" class="form-control" value="@Model.Nombre" />
            </div>
        </div>
        <div class="form-group">
            <label for="Clave" class="control-label col-md-2">Password: </label>
            <div class="col-md-10">
                <input type="password" id="Clave" name="clave" class="form-control" value="@Model.Clave" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ingresar" class="btn btn-default" />
            </div>
        </div>

        <div>
            <div class="alert-info">@ViewBag.Mensaje</div>
        </div>
    </div>
</form>